<dialog id="lightbox" aria-label="Visualizar imagem">
  <button id="lb-close" aria-label="Fechar">
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2.5"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="18" y1="6" x2="6" y2="18"></line><line
        x1="6"
        y1="6"
        x2="18"
        y2="18"></line>
    </svg>
  </button>
  <div id="lb-img-wrap">
    <img id="lb-img" src="" alt="" />
  </div>
  <p id="lb-caption"></p>
</dialog>

<script>
  const dialog = document.getElementById("lightbox") as HTMLDialogElement;
  const lbImg = document.getElementById("lb-img") as HTMLImageElement;
  const lbCap = document.getElementById("lb-caption") as HTMLParagraphElement;
  const lbClose = document.getElementById("lb-close") as HTMLButtonElement;

  function openLightbox(src: string, alt: string) {
    lbImg.src = src;
    lbImg.alt = alt;
    lbCap.textContent = alt;
    lbCap.style.display = alt ? "block" : "none";
    dialog.showModal();
    document.body.style.overflow = "hidden";
  }

  function closeLightbox() {
    dialog.close();
    lbImg.src = "";
    document.body.style.overflow = "";
  }

  document.querySelectorAll<HTMLButtonElement>(".lb-trigger").forEach((btn) => {
    btn.addEventListener("click", () => {
      openLightbox(btn.dataset.src || "", btn.dataset.alt || "");
    });
  });

  lbClose.addEventListener("click", closeLightbox);

  // Fechar clicando no backdrop
  dialog.addEventListener("click", (e) => {
    if (e.target === dialog) closeLightbox();
  });

  // Fechar com Escape (já nativo em <dialog>, mas garantimos o overflow)
  dialog.addEventListener("close", () => {
    document.body.style.overflow = "";
  });
</script>

