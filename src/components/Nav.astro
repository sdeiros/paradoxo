---
const currentPath = Astro.url.pathname;
---

<nav>
  <div class="container">
    <a href="/" class="logo">
      <img
        src="https://res.cloudinary.com/ddpvact5z/image/upload/v1769383694/Logo_Branca_2_sm0bvy.png"
        alt="Paradoxo"
      />
    </a>

    <div class="menu-wrapper">
      <button class="menu-toggle" id="menuToggle" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="menu-overlay" id="menuOverlay"></div>

      <div class="menu" id="menu">
        <a href="/" class={currentPath === "/" ? "active" : ""}>Home</a>
        <a href="/sobre" class={currentPath === "/sobre" ? "active" : ""}
          >Sobre</a
        >
        <a href="/agenda" class={currentPath === "/agenda" ? "active" : ""}
          >Agenda</a
        >
        <a href="/amigos" class={currentPath === "/amigos" ? "active" : ""}
          >Amigos</a
        >
        <a
          href="https://drive.google.com/file/d/1yaircKWH1i2zNLTrtrYDlzvgz29vg-RF/view?usp=sharing"
          target="_blank"
          rel="noopener noreferrer"
        >
          Portfólio
        </a>
        <a
          href="/exposicoes"
          class={currentPath === "/exposicoes" ? "active" : ""}>Exposições</a
        >
      </div>
    </div>
  </div>
</nav>

<style>
  nav {
    background: #c50066;
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    text-decoration: none;
    display: block;
    line-height: 0;
  }

  .logo img {
    height: 36px;
    width: auto;
  }

  .menu-wrapper {
    position: relative;
  }

  .menu-overlay {
    display: none;
  }

  @media (max-width: 1024px) {
    .menu-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: rgba(0, 0, 0, 0.5);
      z-index: 998;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .menu-overlay.active {
      display: block;
      opacity: 1;
    }
  }

  .menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    width: 44px;
    height: 44px;
    position: relative;
  }

  .menu-toggle span {
    width: 30px;
    height: 3px;
    background: rgb(255, 255, 255);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .menu-toggle.active span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .menu {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    background: #c5006600;
    display: none;
    flex-direction: column;
    gap: 0;
    min-width: 200px;
    width: max-content;
    max-width: 90vw;
    border-radius: 4px;
    overflow: hidden;
  }

  .menu.active {
    display: flex;
  }

  .menu a {
    color: white;
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 400;
    padding: 0.4rem 1rem;
    transition: background-color 0.2s;
    white-space: nowrap;
    text-align: right;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  .menu a:last-child {
    border-bottom: none;
  }

  .menu a:hover {
    font-weight: 500;
  }

  .menu a.active {
    font-weight: 700;
    font-size: 1.128rem;
  }

  @media (max-width: 1024px) {
    .menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: 100vh;
      background: rgba(197, 0, 102, 0.98);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2.5rem;
      border-radius: 0;
      transition: right 0.3s ease-in-out;
      z-index: 999;
    }

    .menu.active {
      right: 0;
    }

    .menu a {
      font-size: 2rem;
      padding: 1rem 2rem;
      text-align: center;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
    }

    .menu a.active {
      font-size: 2.2rem;
    }

    .menu-toggle {
      z-index: 1000;
    }
  }

  @media (max-width: 480px) {
    .menu a {
      font-size: 1.75rem;
      padding: 0.75rem 1.5rem;
    }

    .menu a.active {
      font-size: 1.9rem;
    }
  }
</style>

<script>
  const menuToggle = document.getElementById("menuToggle");
  const menu = document.getElementById("menu");
  const menuOverlay = document.getElementById("menuOverlay");

  const isMobile = () => window.innerWidth <= 1024;

  menuToggle?.addEventListener("click", () => {
    menu?.classList.toggle("active");
    menuToggle.classList.toggle("active");

    // Only show overlay and prevent scroll on mobile/tablet
    if (isMobile()) {
      menuOverlay?.classList.toggle("active");
      if (menu?.classList.contains("active")) {
        document.body.style.overflow = "hidden";
      } else {
        document.body.style.overflow = "";
      }
    }
  });

  // Close menu when clicking overlay (mobile only)
  menuOverlay?.addEventListener("click", () => {
    if (isMobile()) {
      menu?.classList.remove("active");
      menuToggle?.classList.remove("active");
      menuOverlay?.classList.remove("active");
      document.body.style.overflow = "";
    }
  });

  // Close menu when clicking a link
  menu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      menu?.classList.remove("active");
      menuToggle?.classList.remove("active");
      if (isMobile()) {
        menuOverlay?.classList.remove("active");
        document.body.style.overflow = "";
      }
    });
  });

  // Clean up on resize
  window.addEventListener("resize", () => {
    if (!isMobile()) {
      menuOverlay?.classList.remove("active");
      document.body.style.overflow = "";
    }
  });
</script>
