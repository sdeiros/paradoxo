import Layout from "../../layouts/Layout.astro";
import { exposicoes } from "./index.astro";

export function getStaticPaths() {
  return exposicoes.map((expo) => ({
    params: { slug: expo.slug },
    props: { expo },
  }));
}

const { expo } = Astro.props;

// Converte URL do YouTube ou Vimeo para embed
function getEmbedUrl(url: string): string {
  const yt = url.match(
    /(?:youtube\.com\/watch\?v=|youtu\.be\/)([a-zA-Z0-9_-]{11})/,
  );
  if (yt) return `https://www.youtube.com/embed/${yt[1]}`;
  const vimeo = url.match(/vimeo\.com\/(\d+)/);
  if (vimeo) return `https://player.vimeo.com/video/${vimeo[1]}`;
  return url;
}

const relacionadas = exposicoes.filter((e) => e.slug !== expo.slug).slice(0, 3);
