    padding: 8rem 0 6rem 0;
    min-height: 500px;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero h1 {
    color: #fff;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -1px;
    margin: 0;
    max-width: 820px;
  }

  /* Content wrapper */
  .content-wrapper {
    background-color: #c50066;
    padding-top: 0;
  }

  .content-section {
    background: #fff;
    border-radius: 2rem 2rem 0 0;
    margin-top: -2rem;
    position: relative;
    z-index: 1;
    padding: 4rem 0;
  }

  .intro {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.6;
    color: #000;
    margin-bottom: 2.5rem;
    max-width: 800px;
  }

  /* Lista de exposições */
  .exposicoes-lista {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .expo-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    border: 2px solid #000;
    border-radius: 1rem;
    overflow: hidden;
    background: #fff;
    text-decoration: none;
    color: inherit;
    transition:
      box-shadow 0.2s ease,
      transform 0.2s ease;
  }

  .expo-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .expo-card.reversed {
    direction: rtl;
  }

  .expo-card.reversed > * {
    direction: ltr;
  }

  .expo-imagem {
    position: relative;
    overflow: hidden;
    min-height: 300px;
  }

  .expo-imagem img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .expo-card:hover .expo-imagem img {
    transform: scale(1.03);
  }

  .expo-status {
    position: absolute;
    top: 1rem;
    left: 1rem;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    text-transform: uppercase;
    color: #ffffffea;
    letter-spacing: 0.5px;
  }

  .expo-status.encerrada {
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
  }

  .expo-status.em-cartaz {
    background: #c50066;
    color: #fff;
  }

  .expo-info {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .expo-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .expo-tipo {
    font-size: 0.8rem;
    font-weight: 700;
    color: #c50066;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .expo-periodo {
    font-size: 0.85rem;
    font-weight: 500;
    color: #666;
  }

  .expo-titulo {
    font-size: 1.75rem;
    font-weight: 700;
    color: #000;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.5px;
    line-height: 1.2;
  }

  .expo-artista {
    font-size: 1rem;
    font-weight: 700;
    color: #c50066;
    margin: 0 0 1rem 0;
  }

  .expo-descricao {
    font-size: 0.9rem;
    font-weight: 500;
    color: #333;
    line-height: 1.6;
    margin: 0;
  }

  /* CTA */
  .cta-section {
    background: #000;
    border-radius: 1rem;
    padding: 3rem;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 1rem 0;
    letter-spacing: -0.5px;
  }

  .cta-section p {
    font-size: 1.125rem;
    font-weight: 500;
    color: #ccc;
    line-height: 1.6;
    margin: 0 auto 2rem auto;
    max-width: 600px;
  }

  .cta-btn {
    display: inline-block;
    background: #c50066;
    color: #fff;
    font-size: 1rem;
    font-weight: 700;
    padding: 0.875rem 2.5rem;
    border-radius: 2rem;
    text-decoration: none;
    transition: background 0.2s ease;
  }

