---
import Layout from "../../layouts/Layout.astro";
import { exposicoes } from "./index.astro";

export function getStaticPaths() {
  return exposicoes.map((expo) => ({
    params: { slug: expo.slug },
    props: { expo },
  }));
}

const { expo } = Astro.props;
const paragrafos = expo.descricaoLonga.split("\n\n");

// Exposições relacionadas (excluindo a atual, máx 3)
const relacionadas = exposicoes
  .filter((e) => e.slug !== expo.slug)
  .slice(0, 3);
---

<Layout title={`${expo.titulo} — Paradoxo Casa Atelier`}>
  <!-- Hero com imagem de fundo -->
  <section class="hero">
    <div class="hero-bg">
      <img src={expo.imagem} alt={expo.titulo} />
      <div class="hero-overlay"></div>
    </div>
    <div class="hero-container">
      <a href="/exposicoes" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 5l-7 7 7 7"/>
        </svg>
        Todas as exposições
      </a>
      <div class="hero-meta">
        <span class="hero-tipo">{expo.tipo}</span>
        <span class={`hero-status ${expo.status}`}>
          {expo.status === "encerrada" ? "Encerrada" : "Em Cartaz"}
        </span>
      </div>
      <h1>{expo.titulo}</h1>
      <p class="hero-artista">{expo.artista}</p>
      <p class="hero-periodo">{expo.periodo}</p>
    </div>
  </section>

  <!-- Conteúdo -->
  <section class="content-wrapper">
    <div class="content-section">
      <div class="container">

        <div class="expo-body">
          <!-- Texto principal -->
          <div class="expo-texto">
            {paragrafos.map((p) => (
              <p>{p}</p>
            ))}
          </div>

          <!-- Imagem ampliada -->
          <div class="expo-imagem-grande">
            <img src={expo.imagem} alt={expo.titulo} />
          </div>
        </div>

        <!-- Exposições relacionadas -->
        {relacionadas.length > 0 && (
          <div class="relacionadas">
            <h2>Outras Exposições</h2>
            <div class="relacionadas-grid">
              {relacionadas.map((rel) => (
                <a href={`/exposicoes/${rel.slug}`} class="rel-card">
                  <div class="rel-imagem">
                    <img src={rel.imagem} alt={rel.titulo} loading="lazy" />
                  </div>
                  <div class="rel-info">
                    <span class="rel-tipo">{rel.tipo}</span>
                    <h3>{rel.titulo}</h3>
                    <p class="rel-artista">{rel.artista}</p>
                    <p class="rel-periodo">{rel.periodo}</p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- CTA -->
        <div class="cta-section">
          <h2>Quer Fazer Parte?</h2>
          <p>
            Apoie o Paradoxo como Amigo e contribua para que mais exposições,
            oficinas e encontros continuem acontecendo na Zona Norte do Rio.
          </p>
          <a href="/amigos" class="cta-btn">Ser Amigo do Paradoxo</a>
        </div>

      </div>
    </div>
  </section>
</Layout>

<style>
  body {
    line-height: 1.6;
    color: #000;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ── Hero com imagem ── */
  .hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: flex-end;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.15) 100%
    );
  }

  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 2rem 4rem 2rem;
    width: 100%;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 3rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #fff;
  }

  .hero-meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  .hero-tipo {
    font-size: 0.8rem;
    font-weight: 700;
    color: #c50066;
    background: rgba(255, 255, 255, 0.95);
    padding: 0.25rem 0.875rem;
    border-radius: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-status {
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-status.encerrada {
    background: rgba(255, 255, 255, 0.2);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.4);
  }

  .hero-status {
    background: rgba(255, 255, 255, 0.2);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.4);
  }

  .hero h1 {
    color: #fff;
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -1px;
    margin: 0 0 0.75rem 0;
    max-width: 820px;
  }

  .hero-artista {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
  }

  .hero-periodo {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    font-weight: 500;
    margin: 0;
  }

  /* ── Content ── */
  .content-wrapper {
    background-color: #000;
    padding-top: 0;
  }

  .content-section {
    background: #fff;
    border-radius: 2rem 2rem 0 0;
    margin-top: -2rem;
    position: relative;
    z-index: 1;
    padding: 4rem 0;
  }

  /* ── Corpo da exposição ── */
  .expo-body {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
    align-items: start;
  }

  .expo-texto p {
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.7;
    color: #000;
    margin-bottom: 1.5rem;
  }

  .expo-texto p:last-child {
    margin-bottom: 0;
  }

  .expo-imagem-grande {
    position: sticky;
    top: 2rem;
  }

  .expo-imagem-grande img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 1rem;
    border: 2px solid #000;
    display: block;
  }

  /* ── Relacionadas ── */
  .relacionadas {
    margin-bottom: 4rem;
  }

  .relacionadas h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #000;
    margin: 0 0 2rem 0;
    letter-spacing: -0.5px;
  }

  .relacionadas-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .rel-card {
    border: 2px solid #000;
    border-radius: 1rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background: #fff;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .rel-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .rel-imagem {
    overflow: hidden;
    height: 200px;
  }

  .rel-imagem img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .rel-card:hover .rel-imagem img {
    transform: scale(1.04);
  }

  .rel-info {
    padding: 1.25rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .rel-tipo {
    font-size: 0.75rem;
    font-weight: 700;
    color: #c50066;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
    display: block;
  }

  .rel-info h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: #000;
    margin: 0 0 0.4rem 0;
    letter-spacing: -0.3px;
    line-height: 1.3;
  }

  .rel-artista {
    font-size: 0.9rem;
    font-weight: 600;
    color: #000;
    margin: 0 0 0.25rem 0;
  }

  .rel-periodo {
    font-size: 0.8rem;
    font-weight: 500;
    color: #666;
    margin: 0;
    margin-top: auto;
    padding-top: 0.5rem;
  }

  /* ── CTA ── */
  .cta-section {
    background: #000;
    border-radius: 1rem;
    padding: 3rem;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    margin: 0 0 1rem 0;
    letter-spacing: -0.5px;
  }

  .cta-section p {
    font-size: 1.125rem;
    font-weight: 500;
    color: #ccc;
    line-height: 1.6;
    margin: 0 auto 2rem auto;
    max-width: 600px;
  }

  .cta-btn {
    display: inline-block;
    background: #c50066;
    color: #fff;
    font-size: 1rem;
    font-weight: 700;
    padding: 0.875rem 2.5rem;
    border-radius: 2rem;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .cta-btn:hover {
    background: #a3005a;
  }

  /* ── Responsive ── */
  @media (max-width: 1024px) {
    .hero {
      min-height: 500px;
    }

    .hero h1 {
      font-size: 3rem;
    }

    .expo-body {
      gap: 2.5rem;
    }

    .relacionadas-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }

    .hero {
      min-height: 420px;
    }

    .hero-container {
      padding: 1.5rem 1.5rem 3rem 1.5rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .hero-artista {
      font-size: 1.1rem;
    }

    .content-section {
      padding: 3rem 0;
    }

    .expo-body {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .expo-imagem-grande {
      position: static;
      order: -1;
    }

    .expo-imagem-grande img {
      height: 320px;
    }

    .relacionadas h2 {
      font-size: 1.5rem;
    }

    .cta-section {
      padding: 2rem;
    }

    .cta-section h2 {
      font-size: 1.5rem;
    }

    .cta-section p {
      font-size: 1rem;
    }
  }

  @media (max-width: 600px) {
    .relacionadas-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .hero {
      min-height: 380px;
    }

    .hero-container {
      padding: 1rem 1rem 2.5rem 1rem;
    }

    .hero h1 {
      font-size: 1.75rem;
      letter-spacing: -0.5px;
    }

    .back-link {
      margin-bottom: 2rem;
    }

    .content-section {
      padding: 2rem 0;
      border-radius: 1.5rem 1.5rem 0 0;
    }

    .expo-texto p {
      font-size: 1rem;
    }

    .expo-imagem-grande img {
      height: 260px;
    }

    .cta-section {
      padding: 1.5rem;
      border-radius: 0.75rem;
    }

    .cta-section h2 {
      font-size: 1.25rem;
    }

    .cta-section p {
      font-size: 0.9rem;
    }

    .cta-btn {
      padding: 0.75rem 2rem;
    }
  }
</style>
