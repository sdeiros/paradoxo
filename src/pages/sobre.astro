<style>
  :root {
    --accent: #c50066;
  }

  /* Page layout */
  .hero {
    background: var(--accent);
    padding: 4rem 2rem;
  }
  .hero-container {
    max-width: 100vw;
    margin: 0 auto;
  }
  .hero h1 {
    color: #fff;
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.02;
    font-weight: 600;
    margin: 0;
    padding: 10rem 4rem;
    width: 55rem;
  }

  .content-wrapper {
    background: var(--accent);
    padding-top: 2rem;
  }

  .content-section {
    background: #fff;
    border-radius: 28px 28px 0 0;
    max-width: 100vw;
    margin: 0 auto;
    padding: 3.5rem 2.4rem;
    box-sizing: border-box;
  }

  .container {
    max-width: 100vw;
  }

  /* Headings and paragraphs */
  h2 {
    font-size: 1.45rem;
    margin: 0 0 0.5rem 0;
    font-weight: 700;
  }
  p {
    color: #000;
    font-size: 1.36rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  /* Team cards grid */
  .team-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.25rem;
    margin-top: 0rem;
  }

  .card {
    border: 2px solid #111;
    background: #fff;
    display: flex;
    flex-direction: column;
  }

  .card-photo img {
    width: 90%;
    border: 2px solid #111;
    margin: 1rem 0rem 0rem 1rem;
    height: 300px;
    object-fit: cover;
    display: block;
  }

  .card-content {
    padding: 14px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-content h3 {
    margin: 0 0 4px 0;
    font-size: 1.45rem;
    font-weight: 700;
  }

  .card-role {
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 6px;
  }

  .card-description {
    font-size: 1rem;
    margin-bottom: 10px;
  }

  .card-tag {
    display: inline-block;
    margin-top: auto; /* üîë isso alinha todos */
    text-align: right;
    padding: 4px 0px;
    font-size: 0.85rem;
    font-weight: 700;
  }

  /* Card style matches screenshot */
  .team-card {
    background: #fff;
    border: 2px solid #111;
    padding: 14px 14px 14px 22px;
    position: relative;
    min-height: 200px;
    box-sizing: border-box;
  }
  .team-card::before {
    content: "";
    position: absolute;
    left: 8px;
    top: 16px;
    width: 8px;
    height: 60px;
    background: #fff;
    border-left: 2px solid #111;
    border-right: 2px solid #111;
  }

  .team-card h3 {
    margin: 0 0 6px 0;
    font-size: 1rem;
    font-weight: 800;
  }
  .role {
    font-size: 0.85rem;
    font-weight: 700;
    margin: 0 0 8px 0;
  }
  .team-card p {
    margin: 0 0 8px 0;
    font-weight: 400;
  }

  /* Responsive: collapse grid on smaller screens */
  @media (max-width: 760px) {
    .hero {
      padding: 2.5rem 1rem;
    }
    .content-section {
      padding: 1.25rem;
    }
    .team-cards {
      grid-template-columns: repeat(1, 1fr);
    }
  }
  .section-image {
    margin: 1.5rem 0 2rem 0;
  }
  .section-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    display: block;
  }
</style>
