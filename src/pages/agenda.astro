---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Agenda - Paradoxo">
  <section class="page-content">
    <div class="container">
      <h1>Agenda</h1>
      <div class="content">
        <p>
          Confira nossa programação cultural com exposições, oficinas, apresentações e eventos
          que acontecem no Paradoxo.
        </p>

        <div class="filter-buttons">
          <button class="filter-btn active" data-filter="todos">
            Todos
          </button>
          <button class="filter-btn" data-filter="Roda de Conversa">
            Rodas de Conversa
          </button>
          <button class="filter-btn" data-filter="Exposição">
            Exposições
          </button>
          <button class="filter-btn" data-filter="Oficina">
            Oficinas
          </button>
        </div>
        
        <div id="loadingMessage" class="loading">
          Carregando eventos...
        </div>

        <div id="errorMessage" class="error-message" style="display: none;">
          Não foi possível carregar os eventos. Por favor, tente novamente mais tarde.
        </div>
        
        <div id="eventsContainer" class="events">
          <!-- Os eventos serão carregados dinamicamente aqui -->
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-content {
    min-height: calc(100vh - 12vh);
    padding: 4rem 0;
    background: #C50066;
  }

  .container {
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
    padding: 0rem;
  }

  h1 {
    font-size: clamp(2rem, 4vw, 3.5rem);
    font-weight: 600;
    color: white;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 0rem;
  }

  .content > p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: white;
  }

  .filter-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    padding: 1rem 0;
  }

  .filter-btn {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.15);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    backdrop-filter: blur(10px);
  }

  .filter-btn:hover {
    border-color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background: white;
    border-color: white;
    color: #C50066;
  }

  .loading {
    text-align: center;
    padding: 3rem;
    color: white;
    font-size: 1.125rem;
  }

  .error-message {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid #c33;
    color: #c33;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
  }

  .events {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .events.empty {
    text-align: center;
    padding: 3rem;
    color: white;
  }

  /* Estilos globais para elementos criados dinamicamente */
  :global(.event-card) {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    display: flex;
    gap: 1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  :global(.event-card:hover) {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  :global(.event-date) {
    background: #C50066;
    color: white;
    border-radius: 8px;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 80px;
  }

  :global(.day) {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1;
  }

  :global(.month) {
    font-size: 0.876rem;
    font-weight: 500;
    margin-top: 0.25rem;
    text-transform: uppercase;
  }

  :global(.event-info) {
    flex: 1;
    min-width: 0;
    overflow: hidden;
  }

  :global(.event-info h3) {
    font-size: 1.65rem;
    font-weight: 800;
    color: #00268d;
    margin-bottom: 0.5rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  :global(.event-info p) {
    font-size: 1rem;
    color: #666;
    margin-bottom: 0.75rem;
    line-height: 1.6;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  :global(.time) {
    display: inline-block;
    background: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    color: #666;
    font-weight: 500;
  }

  :global(.event-badge) {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }

  :global(.badge-roda) {
    background: #e8f4f8;
    color: #0369a1;
  }

  :global(.badge-exposicao) {
    background: #fef3c7;
    color: #b45309;
  }

  :global(.badge-oficina) {
    background: #dcfce7;
    color: #15803d;
  }

  :global(.event-card.past-event) {
    opacity: 0.5;
  }

  :global(.event-card.today-event) {
    border: 3px solid #FFD700;
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
    animation: pulse-border 2s ease-in-out infinite;
  }

  :global(.event-card.today-event .event-date) {
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    animation: glow 2s ease-in-out infinite;
  }

  @keyframes pulse-border {
    0%, 100% {
      box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
    }
    50% {
      box-shadow: 0 0 30px rgba(255, 215, 0, 0.8);
    }
  }

  @keyframes glow {
    0%, 100% {
      box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
    }
    50% {
      box-shadow: 0 0 20px rgba(255, 215, 0, 0.8);
    }
  }

  @media (max-width: 768px) {
    .page-content {
      padding: 3rem 0;
    }

    .container {
      padding: 0 1.5rem;
    }

    h1 {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 640px) {
    .filter-buttons {
      gap: 0.5rem;
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      padding-bottom: 0.5rem;
    }

    .filter-buttons::-webkit-scrollbar {
      display: none;
    }

    .filter-btn {
      padding: 0.625rem 1.25rem;
      font-size: 0.875rem;
      flex-shrink: 0;
      white-space: nowrap;
    }

    :global(.event-card) {
      flex-direction: column;
      gap: 1rem;
    }

    :global(.event-date) {
      flex-direction: row;
      gap: 0.5rem;
      width: 100%;
      padding: 0.75rem;
    }

    :global(.day) {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  // CONFIGURAÇÃO - URL do Google Apps Script
  const GOOGLE_SHEETS_URL = 'https://script.google.com/macros/s/AKfycbyZ2AspxfwOajpcyfdaypDWVJCy5bbUkSDGipHQl0F2e4HIwv_KcAGa_TZTZCCrlNXYbw/exec';
  
  interface Event {
    nome: string;
    descricao: string;
    data: string;
    status: 'Roda de Conversa' | 'Exposição' | 'Oficina';
  }

  const eventsContainer = document.getElementById('eventsContainer');
  const loadingMessage = document.getElementById('loadingMessage');
  const errorMessage = document.getElementById('errorMessage');
  
  let allEvents: Event[] = [];
  let currentFilter = 'todos';

  // Função para formatar a data
  function formatDate(dateString: string) {
    try {
      const date = new Date(dateString);
      const day = date.getDate().toString().padStart(2, '0');
      const months = ['JAN', 'FEV', 'MAR', 'ABR', 'MAI', 'JUN', 'JUL', 'AGO', 'SET', 'OUT', 'NOV', 'DEZ'];
      const month = months[date.getMonth()];
      return { day, month };
    } catch (e) {
      return { day: '??', month: '???' };
    }
  }

  // Função para obter a classe do badge
  function getBadgeClass(status: string): string {
    const normalized = status.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');
    
    if (normalized.includes('roda')) return 'badge-roda';
    if (normalized.includes('exposicao') || normalized.includes('exposição')) return 'badge-exposicao';
    if (normalized.includes('oficina')) return 'badge-oficina';
    
    return 'badge-roda'; // default
  }

  // Função para verificar se o evento já passou
  function isPastEvent(dateString: string): boolean {
    const eventDate = new Date(dateString);
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    return eventDate < today;
  }

  // Função para verificar se o evento é hoje
  function isTodayEvent(dateString: string): boolean {
    const eventDate = new Date(dateString);
    const today = new Date();
    eventDate.setHours(0, 0, 0, 0);
    today.setHours(0, 0, 0, 0);
    return eventDate.getTime() === today.getTime();
  }

  // Função para criar card de evento
  function createEventCard(event: Event): string {
    const { day, month } = formatDate(event.data);
    const badgeClass = getBadgeClass(event.status);
    const pastClass = isPastEvent(event.data) ? ' past-event' : '';
    
    return `
      <div class="event-card${pastClass}" data-status="${event.status}">
        <div class="event-date">
          <span class="day">${day}</span>
          <span class="month">${month}</span>
        </div>
        <div class="event-info">
          <span class="event-badge ${badgeClass}">${event.status}</span>
          <h3>${event.nome}</h3>
          <p>${event.descricao}</p>
        </div>
      </div>
    `;
  }

  // Função para renderizar eventos filtrados
  function renderEvents(filter: string) {
    if (!eventsContainer || allEvents.length === 0) return;

    let filteredEvents = allEvents;

    if (filter !== 'todos') {
      filteredEvents = allEvents.filter(event => {
        const normalized = event.status.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');
        const filterNormalized = filter.toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g, '');
        return normalized.includes(filterNormalized) || event.status === filter;
      });
    }

    if (filteredEvents.length === 0) {
      eventsContainer.innerHTML = '<p class="empty">Nenhum evento encontrado para este filtro.</p>';
      eventsContainer.classList.add('empty');
    } else {
      // Separar eventos futuros e passados
      const futureEvents = filteredEvents.filter(event => !isPastEvent(event.data));
      const pastEvents = filteredEvents.filter(event => isPastEvent(event.data));

      // Renderizar eventos futuros primeiro, depois os passados
      const allHTML = [
        ...futureEvents.map(createEventCard),
        ...pastEvents.map(createEventCard)
      ].join('');

      eventsContainer.innerHTML = allHTML;
      eventsContainer.classList.remove('empty');
    }
  }

  // Carregar eventos
  async function loadEvents() {
    try {
      const response = await fetch(GOOGLE_SHEETS_URL);
      
      if (!response.ok) {
        throw new Error('Erro ao buscar dados');
      }
      
      const data = await response.json();

      if (loadingMessage) {
        loadingMessage.style.display = 'none';
      }

      if (!data.events || data.events.length === 0) {
        if (eventsContainer) {
          eventsContainer.innerHTML = '<p class="empty">Nenhum evento agendado no momento.</p>';
          eventsContainer.classList.add('empty');
        }
        return;
      }

      // Ordenar eventos por data e armazenar
      allEvents = data.events.sort((a: Event, b: Event) => {
        return new Date(a.data).getTime() - new Date(b.data).getTime();
      });

      // Renderizar eventos com filtro atual
      renderEvents(currentFilter);

    } catch (error) {
      if (loadingMessage) {
        loadingMessage.style.display = 'none';
      }
      
      if (errorMessage) {
        errorMessage.style.display = 'block';
      }

      // Fallback: mostrar eventos de exemplo
      if (eventsContainer) {
        eventsContainer.innerHTML = `
          <p style="text-align: center; color: #999; padding: 2rem;">
            Configure a URL do Google Sheets na variável GOOGLE_SHEETS_URL
          </p>
        `;
      }
    }
  }

  // Configurar botões de filtro
  function setupFilters() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter') || 'todos';
        
        // Atualizar estado dos botões
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Atualizar filtro e renderizar
        currentFilter = filter;
        renderEvents(currentFilter);
      });
    });
  }

  // Carregar eventos ao carregar a página
  loadEvents();
  setupFilters();
</script>
